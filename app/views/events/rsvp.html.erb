<div class="events index">
  <h3>RSVP to <%= @event.event_name%></h3>
  <%= form_for @invite, url: events_rsvp_path, method: :post do |f| %>
    <div>
      <%= hidden_field_tag "event_id", params[:event_id] %>
      <%= hidden_field_tag "user_id", params[:user_id] %>
      <%= select_tag "rsvp", options_for_select([['Yes', true], ['No', false]],:selected => @invite.rsvp)  %>
      <%= f.label "additional_guests", "Additional Guests" %>
      <%= f.text_field "additional_guests" %>
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>