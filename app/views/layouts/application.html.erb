<!DOCTYPE html>
<html>
  <head>
    <title>Socialite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="header">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.png" %>
        <% end %>
      </div>
      <div id="slogan">
        <p></p>
      </div>
      <div id="logout">
        <% if @account_type %>
          <% if @account_type == 'host' %>
            <li><%= link_to "Logout", hosts_logout_path %></li>
          <% else %>
            <li><%= link_to "Logout", users_logout_path %></li>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="container">
      <div id="content">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value.html_safe %></div>
        <% end %>
        <br/>
        <% if @account_type %>
          <% case @account_type %>
          <% when 'user' %>
            <div id="sidebar-holder">
              <div id="profile">
                <div id="profile_pic">
                  <%= image_tag "default_user.jpg", width: "235" %>
                  <h3 id="profile-name">
                    <%= @current_user.first_name + ' ' + @current_user.last_name %>
                  </h3>
                </div>
              </div>
              <div id="sidebar">
                <h2>Actions</h2>
                <div class="actions">
                  <ul>
                    <li><%= link_to "Events Home", events_index_path %></li>
                    <li><%= link_to "Edit My Profile", users_edit_profile_path %></li>
                  </ul>
                </div>
              </div>
            </div>
          <% when 'host' %>
            <div id="sidebar-holder">
              <div id="profile">
                <div id="profile_pic">
                  <%= image_tag "default_host.jpg", width: "235" %>
                  <h3 id="profile-name">
                    <%= @current_host.business_name %>
                  </h3>
                </div>
              </div>
              <div id="sidebar">
                <h2>Actions</h2>
                <div class="actions">
                  <ul>
                    <li><%= link_to "Events Home", events_index_path %></li>
                    <li><%= link_to "Edit My Profile", hosts_edit_profile_path %></li>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
      <div id="footer">

      </div>
    </div>
  </body>
</html>
